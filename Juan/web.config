<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <rewrite>
      <rules>
        <!-- Opcional: redirigir todo HTTP a HTTPS si tambiÃ©n tienes puerto 80 -->
        <rule name="HTTP to HTTPS" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{HTTPS}" pattern="off" ignoreCase="true" />
          </conditions>
          <action type="Redirect" url="https://{HTTP_HOST}/{R:1}" redirectType="Permanent" />
        </rule>

        <!-- Proxy /api/* -> json-server en localhost:3000 -->
        <rule name="API Proxy" stopProcessing="true">
          <match url="^code/(.*)" />
          <action type="Rewrite" url="http://localhost:3000/{R:1}" />
          <serverVariables>
                        <set name="HTTP_X_FORWARDED_PROTO" value="https" />
                        <set name="HTTP_X_FORWARDED_HOST" value="{HTTP_HOST}" />
          </serverVariables>
        </rule>
      </rules>
    </rewrite>

    <proxy reverseRewriteHostInResponseHeaders="true" />
        <httpRedirect enabled="false" destination="" httpResponseStatus="Permanent" />
        <httpErrors errorMode="Custom" existingResponse="Replace">
            <remove statusCode="404" subStatusCode="-1" />
            <error statusCode="404"  path="404.html" responseMode="File" />
        </httpErrors>
  </system.webServer>
</configuration>